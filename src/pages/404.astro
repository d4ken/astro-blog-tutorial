---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "404Error";
---

<BaseLayout>
    <div class="error-message">
        <h1>404 Error</h1>
        <h2>Page not found.</h2>
    </div>
</BaseLayout>

<style>
    h1 {
        font-size: xxx-large;
        text-align: center;
    }

    h2 {
        font-size: x-large;
        text-align: center;
    }

    body {
        background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.5)), url("https://images.unsplash.com/photo-1558547752-b3d6dfa5eb68?q=80&w=1526&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        width: 100%;
        height: 100vh;
    }
</style>