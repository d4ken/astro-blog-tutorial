---
import Greeting from "../components/Greeting";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "SNCreate";
---

<BaseLayout pageTitle={pageTitle}>
    <div class="greet">
        <Greeting
                client:load
                messages={[
                    "こんにちは、ピヨッ！",
                    "おはこっこー",
                    "こんこっこー",
                    "ばんこっこー",
                    "おはぽっぽ",
                ]}
        />
    </div>
</BaseLayout>
<style>
    .greet {
        text-align: center;
    }
</style>
